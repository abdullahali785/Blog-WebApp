<%-include("partials/header.ejs")%>

<div class="container my-5 d-flex justify-content-center">
    <div class="w-75"> 
        <h1 class="mb-4 text-center">Edit Post</h1>
        <form action="/posts/<%= post.id %>?_method=PUT" method="POST">
            <input type="text" name="title" value="<%= post.title %>" class="form-control mb-3" required>
            <textarea name="content" rows="10" class="form-control mb-3" required><%= post.content %></textarea>
            
            <div class="d-flex justify-content-center gap-2">
                <button type="submit" class="btn btn-primary px-4" style="background-color: navy;">Save Changes</button>
                <a href="/" class="btn btn-secondary px-4">Cancel</a>
            </div>
        </form>
    </div>
</div>


<%-include("partials/footer.ejs")%>