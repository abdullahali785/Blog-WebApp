<%-include("partials/header.ejs")%>
<div class="row mb-2 p-4 m-3">
    <% if (posts.length === 0) { %>
        <div class="bg-dark text-secondary d-flex justify-content-center align-items-center" style="height: 60vh; background-color: rgb(255, 242, 225) !important;">
            <div class="text-center">
                <h1 class="display-5 fw-bold text-white" style="color: navy !important;">No Blogs To Show</h1>
                <p class="fs-5 mb-4" style="color: navy !important;">Click 'Create Post' to start writing!</p>
            </div>
        </div>
    <% } %>
    <% posts.forEach(post => { %>
        <div class="col-md-6"> 
            <div class="row g-0 border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative"> 
                <div class="col p-4 d-flex flex-column position-static"> 
                    <h3 class="mb-0 px-5 py-2 my-3 mx-1"><%= post.title %></h3> 
                    <p class="card-text mb-auto px-5 mx-1"><%= post.content.substring(0, 100) %>...</p> 
                    <div class="d-flex justify-content-start gap-3 px-5 mx-1 mt-3">
                        <a href="/posts/<%= post.id %>" class="btn btn-navy" style="border: 1px solid navy; color: navy;">Read More</a>
                        <a href="/posts/<%= post.id %>/edit" class="btn btn-outline-secondary">Edit</a>
                    </div>
                </div>

                <div class="col-auto d-none d-lg-block"> 
                    <svg aria-label="Placeholder: Thumbnail" class="bd-placeholder-img" 
                         width="200" height="250" xmlns="https://www.geaves.com/media/catalog/product/cache/43ceea50484a8b0adcb18d996a748113/X/3/X3155_10.jpg" 
                         role="img" preserveAspectRatio="xMidYMid slice">
                        <title>Placeholder</title>
                        <rect width="100%" height="100%" fill="#55595c"></rect>
                        <%#<text x="50%" y="50%" fill="#eceeef" dy=".3em">Thumbnail</text>%>
                    </svg>
                </div> 
            </div> 
        </div> 
    <% }); %>
</div>
<%-include("partials/footer.ejs")%>
